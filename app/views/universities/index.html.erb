<h1>Universities</h1>

<table class="table table-striped table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |u| %>
      <tr>
        <td><%= link_to u.name, u %></td>
        <td><%= u.country %></td>
        <td class="text-end">
          <%= link_to "Edit", edit_university_path(u), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", u, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @universities %>
</div>

<%= link_to "New University", new_university_path, class: "btn btn-primary mt-3" %>
