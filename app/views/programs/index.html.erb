<h1>Programs</h1>

<table class="table table-striped table-hover align-middle">
  <thead class="table-light">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>University</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |p| %>
      <tr>
        <td><%= link_to p.name, p %></td>
        <td><%= truncate(p.description, length: 80) %></td>
        <td><%= link_to p.university.name, p.university %></td>
        <td class="text-end">
          <%= link_to "Edit", edit_program_path(p), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "Delete", p, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex justify-content-center mt-4">
  <%= paginate @programs %>
</div>

<%= link_to "New Program", new_program_path, class: "btn btn-primary mt-3" %>
